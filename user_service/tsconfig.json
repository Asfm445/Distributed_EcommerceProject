{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext", // Change from ESNext
    "moduleResolution": "NodeNext", // Change from Node10
    "target": "ES2022", // Better support for top-level await
    "lib": [
      "ES2022"
    ],
    "types": [
      "node",
      "jest"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
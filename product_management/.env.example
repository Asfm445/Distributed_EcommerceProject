# Environment Configuration
# For Docker: Use service names (postgres, rabbitmq)
# For Local Development: Copy this to .env.local and use localhost

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=product_db

# JWT Secret (change in production!)
JWT_SECRET=your_jwt_secret_here

# RabbitMQ Configuration
RABBITMQ_URL=amqp://rabbitmq

# Application Port
PORT=8000
